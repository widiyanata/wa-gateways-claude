<!-- views/session-detail.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: `Session: ${sessionId}` }) %>
  </head>
  <body class="bg-light">
    <div id="app">
      <%- include('partials/navbar', { currentPage: 'session' }) %>

      <div class="container py-4">
        <div class="row">
          <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h1 id="session-title"><%= sessionId %></h1>
                <span id="session-status">
                  <span
                    :class="['online-indicator', sessionConnected ? 'online' : 'offline']"
                  ></span>
                  {{ sessionConnected ? "Online" : "Offline" }}
                </span>
                <!-- <img id="qrCode" src="#" alt="QR Code" /> -->
              </div>
              <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
              </a>
            </div>
          </div>
          <div class="col-md-12"><%- include('components/session-detail/session-tabs.ejs') %></div>
        </div>
      </div>

      <%- include('partials/modals') %>
    </div>

    <%- include('partials/scripts') %>
  </body>
</html>
