{
  "name": "wa-gateway",
  "version": "1.0.0",
  "description": "WhatsApp Gateway using Baileys",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "pkg ."
  },
  "bin": "app.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "views/**/*"
    ],
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.5.0",
    "body-parser": "^1.20.2",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "node-cron": "^3.0.3",
    "pino": "^8.16.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
