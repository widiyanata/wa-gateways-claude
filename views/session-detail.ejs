            endDate: "",
          });

          // Media preview
          const showMediaPreview = ref(false);
          const mediaPreviewContent = ref("");
          const mediaFileInfo = ref({
            name: "",
            size: "",
            type: "",
          });

          const daysList = [
            "monday",
